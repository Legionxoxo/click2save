{
  "manifest_version": 3,
  "name": "Video Downloader Assistant",
  "version": "1.0.0",
  "description": "Detects videos on webpages and allows downloading with user consent for cookies when needed",
  "permissions": [
    "webRequest",
    "cookies",
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*",
    "https://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "config.js",
        "content.js"
      ],
      "css": [
        "video-overlay.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Downloader Assistant"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}