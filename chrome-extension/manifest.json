{
  "manifest_version": 3,
  "name": "Cookie Education Assistant",
  "version": "1.0.0",
  "description": "Educational tool that helps you understand cookies by safely sharing them with your consent for learning purposes",
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "notifications",
    "scripting"
  ],
  "optional_permissions": [
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*",
    "https://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "config.js",
        "content.js"
      ],
      "css": [
        "video-overlay.css"
      ],
      "run_at": "document_idle",
      "exclude_matches": [
        "chrome://*/*",
        "chrome-extension://*/*",
        "moz-extension://*/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Education Assistant"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}